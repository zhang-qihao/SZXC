{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "ES5",
        "jsx": "preserve",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "dist/npm"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
